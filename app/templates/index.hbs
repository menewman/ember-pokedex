<div class="row">
  <div class="col-md-4">
    <h4>Jump directly to a Pok&eacute;mon:</h4>
    <div class="input-group">
      {{input class='form-control' placeholder='Enter Pokemon name or number' value=searchText enter='jumpToPokemon'}}
      <span class="input-group-btn">
        <button type="button" class="btn btn-default" aria-label="Search" {{action 'jumpToPokemon'}}>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h4>Browse Pok&eacute;mon:</h4>
    <div class="list-group">
      {{#each model as |poke|}}
        {{#link-to 'pokemon' poke.name classNames='list-group-item'}}
          {{sentence-case poke.name}}
        {{/link-to}}
      {{/each}}
    </div>
  </div>
</div>
