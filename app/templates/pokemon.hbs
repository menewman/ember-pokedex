<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">#{{zero-pad model.id 3}}: {{sentence-case model.name}}</h3>
      </div>
      <div class="panel-body">
        <p>
          Type:
          {{#each (poke-type model.types) as |type|}}
            {{#link-to 'types' type}}{{sentence-case type}}{{/link-to}}
          {{/each}}
        </p>
        <p>Species:
          {{#link-to 'species' model.species.name}}
            {{sentence-case model.species.name}}
          {{/link-to}}
        </p>
        <img src={{model.sprites.front_default}}>
        <p>Height: {{height model.height}}</p>
        <p>Weight: {{weight model.weight}}</p>
        <p>Base experience: {{model.base_experience}}</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Base Stats</h4>
      </div>
      <table class="table _stat-table">
        <tbody>
            {{#each model.stats as |statInfo|}}
              <tr>
                <th scope="row'">{{sentence-case statInfo.stat.name}}</th>
                <td>{{statInfo.base_stat}}</td>
              </tr>
            {{/each}}
            <tr>
              <th scope="row'">Total</th>
              <td>{{sum-stats model.stats}}</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Moves Learned</h4>
      </div>
      <div class="list-group">
        {{#each model.moves as |moveInfo|}}
            {{#link-to 'moves' moveInfo.move.name class="list-group-item"}}
              {{sentence-case moveInfo.move.name}}
            {{/link-to}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
